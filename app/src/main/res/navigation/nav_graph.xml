<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timelineFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="life.wanderinglocal.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/timelineFragment"
        android:name="life.wanderinglocal.fragment.TimelineFragment"
        android:label="TimelineFragment" >
        <action
            android:id="@+id/action_timelineFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment"
            app:popUpTo="@id/timelineFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryDetailFragment"
        android:name="life.wanderinglocal.fragment.EntryDetailFragment"
        android:label="EntryDetailFragment" />
</navigation>